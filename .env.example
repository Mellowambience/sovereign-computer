# ── Ollama ────────────────────────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:70b

# ── Paths ─────────────────────────────────────────────────────────────────────
OUTPUT_DIR=./output

# ── SearXNG ───────────────────────────────────────────────────────────────────
SEARXNG_URL=http://localhost:8080

# ── Webhook Server (webhook_server.py) ────────────────────────────────────────
PORT=9000
# Set a strong secret — this is what SureThing sends to authenticate
WEBHOOK_SECRET=change_me_to_a_strong_random_string
# Internal secret used by n8n → webhook_server (can be same or different)
SOVEREIGN_INTERNAL_SECRET=change_me_internal

# ── ChromaDB ──────────────────────────────────────────────────────────────────
CHROMA_PERSIST_DIR=./memory
